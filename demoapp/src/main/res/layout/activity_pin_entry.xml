<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jebware.keypadviewdemo.PinEntryActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/pin_box_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/pin_box_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/pin_box_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/pin_box_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            />

    </LinearLayout>

    <com.jebware.keypadview.KeypadView
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/buttonBarStyle"
                >
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="7"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="8"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="9"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/buttonBarStyle"
                >
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="4"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="5"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="6"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/buttonBarStyle"
                >
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="1"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="2"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="3"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="2"
                style="?android:attr/buttonBarStyle"
                >
                <View
                    android:layout_height="0dp"
                    />

                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="0"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
                <com.jebware.keypadview.KeypadButton
                    android:layout_height="match_parent"
                    android:text="&#8592;"
                    app:action="delete"
                    tools:ignore="HardcodedText"
                    style="?android:attr/buttonBarButtonStyle"
                    />
            </TableRow>
        </TableLayout>

    </com.jebware.keypadview.KeypadView>

</LinearLayout>
